extends layout
block content
  .page-header
    .row
      .col-md-3.col-md-10.col-md-offset-1
        h3 Add Path
    .row
      .col-md-4.col-md-offset-3
        p Path is a sequence in which one should follow links.
  form.form-horizontal.add-path-form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-sm-3.control-label(for='title') Title
      .col-sm-7
        input.form-control(type='text', name='title', id='title', placeholder='Title')
    .form-group.row
      label.col-sm-3.control-label(for='title') Path Link
      .col-sm-7
        input.form-control(type='text', class="path-search", id='currentPathLink', placeholder='Current path link')  
    canvas(id="myCanvas", width="600", height="200", resize="true")
    input.path-data.hide(name="path")
    .form-group.row
      label.col-sm-3.control-label(for='Category') Category
      .col-sm-7
        input.form-control(type='text', name='category', class='category-search', placeholder='Category')
    .form-group.row
      label.col-sm-3.control-label(for='tags') Tags
      .col-sm-7
        input.form-control(type='text', name='tags', id='tags', placeholder='Tags')
    .form-group.row
      label.col-sm-3.control-label(for='description') Description
      .col-sm-7
        textarea.form-control(type='text', name='description', id='description', rows="4",placeholder='Description')
    .form-group.row
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-primary(type='submit') Add Path
  script(src='/js/lib/paper-full.min.js', type="text/javascript")
  script(src='/js/path.js', type="text/paperscript", canvas="myCanvas")
